ion-view.item-page(
  view-title='{{::("menu.product"|translate)}}'
)
  ion-nav-title
    .alt-logo

  ion-nav-buttons(side="right")
    cart-button

  ion-content.item-show-page
    form.product-wrapper(
      name="selectProductForm"
      ng-submit='productVm.selectProduct()'
    )
      div(
        ng-include="'templates/product/product.html'"
      )

  ion-footer-bar.bar-stable.item-show-footer.bar-footer--tall
    product-counter.counter(
      ng-if="!productVm.product.is_group"
      options="productVm.counterOptions"
    )

    button.button-full.button-main(
      ng-if="!productVm.product.is_group"
      ng-click="::productVm.runAction(productVm.actions.cart)"
      ng-disabled="!productVm.item.cantidad || productVm.disableInputs || !productVm.canAdd"
    ) {{::('product.addCar' | translate)}}


    button.button-full.button-main(
      ng-if="productVm.product.is_group"
      ng-click="::productVm.runAction(productVm.actions.cartMultipleItems)"
      ng-disabled="productVm.multipleItems.length === 0"
    ) {{::('product.addCar' | translate)}}
