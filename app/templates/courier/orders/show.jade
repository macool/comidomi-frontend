      ng-if="coVm.order.status === 'new'"
      ng-click="coVm.showTakeRequestModal()"
    )
      | {{ ::("shippingRequest.takeRequest" | translate) }}
    button.button.button-outline.button-energized.button-small(
      ng-if="coVm.order.status === 'assigned'"
