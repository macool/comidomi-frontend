ion-view(
  view-title="{{ ::('menu.client.myOrders' | translate) }}"
)
  ion-nav-title
    .alt-logo

  form(
    name="errVm.errandForm"
    ng-submit="errVm.submitProcess()"
    novalidate
  )
    ion-content.errands-page
      .header-message
        p.main Hola! Dinos que necesitas?
        span.tip Un mensajero se comunicara contigo una vez reciba este mensaje.
      .place.input-form
        span.label Lugar de Entrega
        .select-address-container(
          ng-click="errVm.selecAddress()"
        )
          .select-address(
            ng-if="!errVm.addressSelected"
          ) Seleccionar un lugar
          .select-addresss(
            ng-if="errVm.addressSelected"
          )
            .address-row
              .content-address
                .address
                  .one {{ errVm.addressSelected.direccion_uno }}
                  .two {{ errVm.addressSelected.direccion_dos }}
              .map
                .image(
                  style="background-image: url('{{errVm.addressSelected.static_map_image}}')"
                )
      .description.input-form
        span.label Mensaje
        textarea(
          msd-elastic
          ng-model='errVm.errand.description'
          required
        )

    ion-footer-bar.bar-stable.bar-footer--tall
      button.button-full.button-main(
        type="submit"
        ng-disabled='errVm.errandForm.$invalid'
      ) {{::("globals.send"|translate)}}
