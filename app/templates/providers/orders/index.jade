ion-view.provider-orders-index-page(
  view-title="{{::('menu.provider.orders'|translate)}}"
)
  ion-nav-title
    .alt-logo
  .filter-tabs.tabs-header
    .filter-tab(
      menu-close
      ng-class="{'tab-item-active': poVm.tab==='submitted'}"
      ui-sref="provider.orders.index({status: 'submitted'})"
    ) {{::("orders.inProcess"|translate)}}
    .filter-tab(
      menu-close
      ng-class="{'tab-item-active': poVm.tab==='completed'}"
      ui-sref="provider.orders.index({status: 'completed'})"
    ) {{::("orders.completed"|translate)}}
  //- ion-nav-buttons(side="right")
    //- provider-notifications

  ion-content
    .skeletons(
      ng-if="!poVm.loaded"
    )
      skeleton(number=5)

    .orders(ng-if="poVm.customerOrders.length")
      .order-container(
        ng-repeat="order in poVm.customerOrders"
        ui-sref="provider.orders.show({customerOrder: order, id: order.id})"
      )
        .order
          .image-wrapper
            img(ng-src="{{ ::order.customer_profile.image_url }}")
          .content
            .row-cmd
              .text.accent
                | {{ ::order.customer_profile.name }}
              .text.accent
                | # {{ ::order.id }}
            .row-cmd
              .text.secondary
                price(amount="{{order.subtotal_items_cents}}" currency="{{order.subtotal_items_currency}}")
              .text.secondary
                span.date {{ order.submitted_at | formatDate:'MMMM DD - H:mm A' }}
                
    .empty-state(ng-if="!poVm.customerOrders.length && poVm.loaded")
      .image-wrapper
        img(ng-src="{{ ::poVm.emptyState }}")
      .text {{::("orders.ordersEmpty"| translate)}}

  tabs-nav.hide-on-keyboard-open(
    type="provider"
  )
